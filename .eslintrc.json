{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "compat"
  ],
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "no-unexpected-multiline": 2,
    "compat/compat": 2,
    "max-len": ["error", 80]
  },
  "env": {
    "browser": true,
    "jest": true
  }
}